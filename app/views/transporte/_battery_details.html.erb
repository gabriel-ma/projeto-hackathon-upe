<style>
  .battery-animation {
  display: inline-block;
  position: relative;
  width: 5rem;
  height: 10rem;
  box-shadow: 0 0 0 0.2rem #425C77;
  background: white;
  border-radius: 0.2rem;
}
.battery-animation:before {
  content: "";
  position: absolute;
  left: 1.25rem;
  right: 1.25rem;
  top: -0.75rem;
  height: 0.75rem;
  width: 2.5rem;
  background: #425C77;
  border-radius: 0.4rem;
}
.battery-animation:after {
  content: "";
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

@keyframes power {
  0% {
    color: #bcbcbc;
  }
  75% {
    color: #bcbcbc;
    text-shadow: none;
  }
  90% {
    color: #58fa70;
    text-shadow: 0 0 0.8em #71FB85;
  }
  100% {
    color: #bcbcbc;
    text-shadow: none;
  }
}
@keyframes load {
  0% {
    top: 10rem;
  }
  100% {
    top: <%= ((100-@transporte.bateria)/10)  %>rem;
  }
}
.liquid {
  position: absolute;
  bottom: 0;
  width: 5rem;
  background: #71FB85;
  animation: load 2.25s;
  animation-fill-mode: forwards;
}
</style>
<div class="container">
  <div class="row h-100 col-12">
    <div class="col-3 battery">
      <div class="battery-animation">
          <div class="liquid"><%= @transporte.bateria %>%</div>
        </div>
    </div>
    <div class="col-9">
       <div class="scrolling-wrapper col-12 battery">
         <% @leituras.each do |leitura| %>
            <div class="col-4 bikeHistoryInfo">
              <div class="row">
                  <%= leitura.created_at.strftime("%d/%m/%Y as %H:%M") %>
              </div>
              <hr>
              <div class="row">
                  <%= leitura.tipo %>
              </div>
            </div>
        <% end %>
      </div>
  </div>
</div>
